{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./lib/esm/dts",
    "outDir": "./lib/esm/dts",

    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "classic",

    "emitDeclarationOnly": true
  },
  "exclude": ["./docusaurus/**/*", "./dist/**/*"]
}
